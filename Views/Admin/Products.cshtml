@model List<Product>

<h2>Products</h2>

<p>
    <a asp-controller="Admin" asp-action="AddProduct">Add Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Power</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Power</td>
                <td>@product.Price</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@product.Id">Edit</a> |
                    <a asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
