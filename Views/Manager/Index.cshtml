@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Status</th>
            <th>Date</th>
            <th>Products</th>
            <th>Quantity</th>
            <th>Options</th>
            <th>Total Price</th>
            <th>Customer</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in ViewBag.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Status</td>
                <td>@order.Date</td>
                <td>@order.Products</td>
                <td>@order.Quantity</td>
                <td>@order.Options</td>
                <td>@order.TotalPrice</td>
                <td>@order.CustomerId</td>
                <td>
                    @if (order.Status != "Completed")
                    {
                        <a asp-controller="Manager" asp-action="CreateOffer" asp-route-id="@order.Id">Create Offer</a>
                    }
                    @if (order.Status == "Pending")
                    {
                        <a asp-controller="Manager" asp-action="RejectOrder" asp-route-id="@order.Id">Reject</a>
                    }
                    @if (order.Status == "Pending" || order.Status == "Processing")
                    {
                        <a asp-controller="Manager" asp-action="MarkAsProcessing" asp-route-id="@order.Id">Mark as Processing</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@* Добавляем форму для сортировки *@
<form asp-controller="Manager" asp-action="Orders" method="get">
    <label>Sort by status:</label>
    <select name="status">
        <option value="">All</option>
        <option value="Pending">Pending</option>
        <option value="Confirmed">Confirmed</option>
        <option value="Processing">Processing</option>
        <option value="Completed">Completed</option>
        <option value="Rejected">Rejected</option>
    </select>
    <button type="submit">Sort</button>
</form>
