@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Products</th>
                    <th>Quantity</th>
                    <th>Options</th>
                    <th>Total Price</th>
                    <th>Customer</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in ViewBag.Orders)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.Status</td>
                        <td>@order.Date</td>
                        <td>@order.Products</td>
                        <td>@order.Quantity</td>
                        <td>@order.Options</td>
                        <td>@order.TotalPrice</td>
                        <td>@order.CustomerId</td>
                        <td>
                            @if (order.Status != "Completed" && order.Status!="Rejected")
                            {
                                <a asp-controller="Manager" asp-action="CreateOffer" asp-route-id="@order.Id" class="btn btn-primary btn-sm">Create Offer</a>
                            }
                            @if (order.Status == "Pending")
                            {
                                <a asp-controller="Manager" asp-action="RejectOrder" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Reject</a>
                            }
                            @if (order.Status == "Pending" || order.Status == "Processing")
                            {
                                <a asp-controller="Manager" asp-action="MarkAsProcessing" asp-route-id="@order.Id" class="btn btn-success btn-sm">Mark as Processing</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* Добавляем форму для сортировки *@
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Manager" asp-action="Orders" method="get">
            <div class="form-group">
                <label>Sort by status:</label>
                <select name="status" class="form-control">
                    <option value="">All</option>
                    <option value="Pending">Pending</option>
                    <option value="Processed">Processed</option>
                    <option value="Processing">Processing</option>
                    <option value="Completed">Completed</option>
                    <option value="Rejected">Rejected</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Sort</button>
        </form>
    </div>
</div>
